2)Program to find Factorial of number via pure functions
// SPDX-License-Identifier: MIT
pragma solidity ^0.8.10;

contract SakhaGlobal{
     int public fact=1;

function add(int a) public{
    fact=1;
    for(int i=1;i<=a;i++)
    {
        fact=fact*i;
       
    }
   
}
     
}
