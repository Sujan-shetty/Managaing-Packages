9)Program to find Sum of Digits
// SPDX-License-Identifier: MIT
pragma solidity ^0.8.10;

contract SakhaGlobal{
      function sum(uint[] memory ar) external pure returns(uint)
      {
          uint num;
          for(uint i=0;i<ar.length;i++)
          {
                 num +=ar[i];
          }
          return num;
      }
}
